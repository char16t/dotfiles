;; Emacs 26.3 Configuration
;;

;; Hide menu bar
(menu-bar-mode -1)

;; Hide tool bar
(tool-bar-mode -1)

;; Hide status bar
(setq-default mode-line-format nil)

;; Hide scrollbar
(scroll-bar-mode -1)

;; Hide window decorations
(set-frame-parameter nil 'undecorated t)

;; Maximize window on start
(add-to-list 'default-frame-alist '(fullscreen . maximized))

;; Disable default Emacs screen
(setq inhibit-startup-screen t)

;; Change all prompts to y or n
(fset 'yes-or-no-p 'y-or-n-p)

;; Always follow the symlinks
(setq vc-follow-symlinks t)

;; Cursor
(setq-default cursor-type 'bar)

;; Enable bindings:
;; Ctrl-C to copy
;; Ctrl-V to paste
;; Ctrl-X to cut
(cua-mode t)
(setq cua-auto-tabify-rectangles nil) ;; Don't tabify after rectangle commands
(transient-mark-mode 1) ;; No region when it is not highlighted
(setq cua-keep-region-after-copy t) ;; Standard Windows behaviour

;; Backups
(setq backup-by-copying t)(defvar --backup-directory (concat user-emacs-directory "backups"))
(if (not (file-exists-p --backup-directory))
        (make-directory --backup-directory t))
(setq backup-directory-alist `(("." . ,--backup-directory)))
(setq make-backup-files t               ; backup of a file the first time it is saved.
      backup-by-copying t               ; don't clobber symlinks
      version-control t                 ; version numbers for backup files
      delete-old-versions t             ; delete excess backup files silently
      delete-by-moving-to-trash t
      kept-old-versions 6               ; oldest versions to keep when a new numbered backup is made (default: 2)
      kept-new-versions 9               ; newest versions to keep when a new numbered backup is made (default: 2)
      auto-save-default t               ; auto-save every buffer that visits a file
      auto-save-timeout 20              ; number of seconds idle time before auto-save (default: 30)
      auto-save-interval 200            ; number of keystrokes between auto-saves (default: 300)
      )

;; History
(setq savehist-file (concat user-emacs-directory "history"))
(savehist-mode 1)
(setq history-length t)
(setq history-delete-duplicates t)
(setq savehist-save-minibuffer-history 1)
(setq savehist-additional-variables
      '(kill-ring
        search-ring
        regexp-search-ring))
