set enc=utf-8
set number
set noswapfile
set nobackup

colorscheme Tomorrow-Night-Bright
syntax on

let mapleader = ","
set virtualedit=onemore

:inoremap jk <esc>

" Disable some keys
:inoremap <esc> <nop>
:nnoremap <Up> <nop>
:nnoremap <Down> <nop>
:nnoremap <Left> <nop>
:nnoremap <Right> <nop>
:vnoremap <Up> <nop>
:vnoremap <Down> <nop>
:vnoremap <Left> <nop>
:vnoremap <Right> <nop>
